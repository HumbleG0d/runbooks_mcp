# Dockerfile para Outbox Processor Service
FROM node:18-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./
COPY tsconfig.json ./

# Instalar dependencias
RUN npm ci

# Copiar c√≥digo fuente
COPY src/ ./src/

# Compilar TypeScript
RUN npm run build

# Comando para ejecutar el servicio
CMD ["node", "dist/outbox-service.js"]
