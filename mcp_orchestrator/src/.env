# Server Configuration
SERVER_NAME=runbooks-mcp-server
SERVER_VERSION=1.0.0
HTTP_PORT=3222
MCP_MODE=hybrid
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcp_logs
DB_USER=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=20

# Outbox Pattern Configuration
OUTBOX_PROCESSING_INTERVAL=5000      # Procesar cada 5 segundos
OUTBOX_BATCH_SIZE=50                 # MÃ¡ximo 50 eventos por batch
OUTBOX_MAX_RETRIES=3                 # 3 intentos antes de marcar como failed
OUTBOX_RETRY_BACKOFF_MS=1000         # Base de 1 segundo para exponential backoff
OUTBOX_LOCK_TIMEOUT=300              # 5 minutos de timeout para locks

# Message Broker Configuration (RabbitMQ)
RABBITMQ_URL=amqp://guest:guest@localhost:5672