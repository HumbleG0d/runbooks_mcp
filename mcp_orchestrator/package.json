{
    "name": "mcp_orchestrator",
    "version": "1.0.0",
    "description": "MCP Server para leer runbooks y logs desde Claude Desktop",
    "main": "dist/mcp-server.js",
    "scripts": {
        "build": "tsc",
        "start:mcp": "node dist/mcp-server.js",
        "start:hybrid": "node dist/hybrid-mcp-http.js",
        "start:outbox": "ts-node src/main.ts",
        "dev:mcp": "tsx src/mcp-server.ts",
        "dev:hybrid": "tsx src/hybrid-mcp-http.ts",
        "dev:outbox": "ts-node src/main.ts",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "express": "^5.1.0",
        "pg": "^8.16.3",
        "@modelcontextprotocol/sdk": "1.17.4"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/node": "24.3.0",
        "@types/pg": "^8.15.5",
        "nodemon": "3.1.10",
        "rimraf": "6.0.1",
        "ts-node": "10.9.2",
        "typescript": "5.9.2"
    }
}